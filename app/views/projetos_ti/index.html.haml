%h1 Listar projetos de TI

- if current_user.admin
  = render 'filtro'
  
%table.table.table-hover
  %thead
    %tr
      %th Órgão
      %th Nome do projeto
      %th Gerente do projeto
      %th
      %th
      %th
  %tbody
  - @projetos_ti.each do |projeto_ti|
    %tr
      %td= projeto_ti.orgao.nome if projeto_ti.orgao
      %td= projeto_ti.nome_projeto
      %td= projeto_ti.gerente_projeto
      %td
        = link_to projeto_ti, :title => 'Visualizar' do
          %span.fui-eye{:class => 'icons24'}
      %td
        = link_to edit_projeto_ti_path(projeto_ti), :title => 'Editar' do
          %span.fui-new{:class => 'icons24'}
      %td 
        = link_to projeto_ti, :method => :delete, :title => 'Excluir', :data => { :confirm => 'Você tem certeza?' } do
          %span.fui-cross{:class => 'icons24'}

%br

- if not current_user.admin
  .btn.btn-small.btn-inverse
    = link_to 'Novo projeto de TI', new_projeto_ti_path
