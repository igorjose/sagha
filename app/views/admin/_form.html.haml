= simple_form_for(@user, :url => admin_path(@user)) do |f|
  = f.error_notification

  .inputs
    = f.input :email, :required => true, :autofocus => true, input_html: { class: 'span6' }
    = f.association :orgao, :required => true, input_html: {class: 'select-block'}, label_method: :nome, :label => "Órgão", input_html: {class: 'span6 no-margin', style: "display: block;"}, label_html: {style: "display: block;"}, prompt: "Selecione uma opção"
    = f.input :password, :required => false, :label => "Senha", input_html: { class: 'span6' }
    = f.input :password_confirmation, :required => false, :label => "Confirme sua senha", input_html: { class: 'span6' }
    %label.checkbox
      %span.icons
        %span.first-icon.fui-checkbox-unchecked
        %span.second-icon.fui-checkbox-checked
      = f.input :admin, :label => "Administrador do sistema?", :required => false
  
  .actions
    = f.button :submit, class: 'btn btn-success', value: 'Cadastrar Usuário'