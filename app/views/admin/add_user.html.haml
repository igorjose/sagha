%h2 Cadastrar novo usuário
= simple_form_for(@user, :url => admin_index_path) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, :required => true, :autofocus => true, input_html: { class: 'span6' }

    = f.association :orgao, :required => true, input_html: {class: 'select-block'}, label_method: :nome, :label => "Órgão", input_html: {class: 'span6 no-margin', style: "display: block;"}, label_html: {style: "display: block;"}
    = f.input :password, :required => true, :label => "Senha", input_html: { class: 'span6' }

    = f.input :password_confirmation, :required => true, :label => "Confirme sua senha", input_html: { class: 'span6' }

  .form-actions
    = f.button :submit, "Cadastrar", class: 'btn btn-success'