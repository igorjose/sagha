<div class="form-signin formulario-login">

	<h2>Fazer login no sistema</h2>

	<br />

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-signin">
	    <%= f.input :email, :required => false, :autofocus => true, :placeholder => "Digite seu email", :input_html=>{:class=>'input-block-level'} %>
	    <%= f.input :password, :required => false, :placeholder => "Digite sua senha", :input_html=>{:class=>'input-block-level'} %>
	 
     <label class="checkbox">
     	<span class="icons">
     		<span class="first-icon fui-checkbox-unchecked"></span>
     		<span class="second-icon fui-checkbox-checked"></span>
     	</span>
     	<%= f.input :remember_me, label: 'Lembrar', :input_html=>{:class=>'checkbox'}, :as => :boolean if devise_mapping.rememberable? %>
     </label>
	  </div>

	    <%= f.button :submit, "Login", :class => 'btn btn-large btn-primary' %>

	<% end %>

	<%= render "devise/shared/links" %>

</div>
