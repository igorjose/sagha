%h1 Listar cargos

%table.table.table-hover
  %thead
    %tr
      %th Nome
      %th
      %th
      %th
  %tbody
  - @cargos.each do |cargo|
    %tr
      %td= cargo.nome
      %td
        = link_to cargo, :title => 'Visualizar' do
          %span.fui-eye{:class => 'icons24'}
      %td
        = link_to edit_cargo_path(cargo), :title => 'Editar' do
          %span.fui-new{:class => 'icons24'}
      %td 
        = link_to cargo, :method => :delete, :title => 'Excluir', :data => { :confirm => 'VocÃª tem certeza?' } do
          %span.fui-cross{:class => 'icons24'}

%br

