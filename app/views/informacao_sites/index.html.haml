%h1 Listar informações sobre sites

- if current_user.admin
  = render 'filtro'
  
%table.table.table-hover
  %thead
    %tr
      %th Órgão
      %th Possui site
      %th Responsável técnico
      %th
      %th
      %th
  %tbody
  - @informacao_sites.each do |informacao_site|
    %tr
      %td= informacao_site.orgao.nome
      %td= informacao_site.possui_site
      %td= informacao_site.responsavel_tecnico
      %td
        = link_to informacao_site, :title => 'Visualizar' do
          %span.fui-eye{:class => 'icons24'}
      %td
        = link_to edit_informacao_site_path(informacao_site), :title => 'Editar' do
          %span.fui-new{:class => 'icons24'}
      %td 
        = link_to informacao_site, :method => :delete, :title => 'Excluir', :data => { :confirm => 'Você tem certeza?' } do
          %span.fui-cross{:class => 'icons24'}

%br

.btn.btn-small.btn-inverse
  = link_to 'Nova Informações sobre sites', new_informacao_site_path
